{
    "$schema": "https://railway.app/railway.schema.json",
    "build": {
      "builder": "NIXPACKS",
      "nixpacksPlan": {
        "phases": {
          "setup": {
            "nixPkgs": ["python310", "gcc"]
          },
          "install": {
            "cmds": ["pip install poetry", "poetry install --no-root"]
          }
        }
      }
    },
    "deploy": {
      "startCommand": "poetry run uvicorn app.main:app --host 0.0.0.0 --port $PORT"
    }
  }